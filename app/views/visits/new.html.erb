

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <p>How was your visit?</p>
        <div class="form-container">
          <%= simple_form_for [@toilet, @visit] do |f| %>
          <%= f.input :rating, collection: 1..5, prompt: "Select your age", selected: 3 %>
          <%= f.input :has_paper %>
          <%= f.input :comment, as: :text %>
          <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
